{
  // cpp
  // "C_Cpp.errorSquiggles": "Disabled",
  "C_Cpp.default.browse.databaseFilename": "${workspaceRoot}/.vscode/vc.db",
  "C_Cpp.default.browse.path": [
    "${workspaceFolder}/src"
  ],


  // git
  "git.ignoreLegacyWarning": true,


  // workbench
  "workbench.editor.tabCloseButton": "off",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Pitch Black Monokai",
  "workbench.settings.editor": "json",


  // editor
  "editor.lineHeight": 16,
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 100,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.fontFamily": "Liberation Mono, monospace, 'Droid Sans Fallback'",
  "editor.fontSize": 12.5,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace":"boundary",
  "editor.renderIndentGuides": false,
  "editor.detectIndentation": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,

  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 1,

  "files.trimTrailingWhitespace": true,

  "zenMode.centerLayout": false,
  "zenMode.fullScreen": true,

  // font style settings
  "editor.tokenColorCustomizations": {
    "[Pitch Black Monokai]": {
      "comments": "#606060",
      "textMateRules": [
        {
          "scope": [
            "comment"
          ],
          "settings": {
            "fontStyle": "italic"
          },
        }
      ]
    },
  },
  "editor.rulers": [
    79,
    80
  ],


  // cmake
  //"cmake.cmakePath": "C:\\CMake",


  // python
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.pylintPath": "/sww/gfx/bin/pylint",
  "python.linting.pylintArgs": [
    "--extension-pkg-whitelist=numpy"
  ],
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "/usr/bin/flake8",
  "python.linting.flake8Args": [
    "--ignore=E221,E241,E251"
  ],


  // disable updates and recommendations
  "update.channel": "none",
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": false,


  // file specific settings
  "files.associations": {
    "*.args": "xml",
    "*.eco": "ini",
    "*.eco3": "json",
    "*.csh*": "shellscript",
    "HDR.*": "ini",
    "*.pymk": "python",
    "*.isph": "c",
    "*.ispc": "c"
  },
  "[json]": {
    "editor.tabSize": 2
  },


  // terminal
  "terminal.integrated.fontSize": 13,


  // latex workshop
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex",
      "tools": [
        "pdflatex"
      ]
    },
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    },
    {
      "name": "pdflatex -> bibtex -> pdflatex*2",
      "tools": [
        "pdflatex",
        "bibtex",
        "pdflatex",
        "pdflatex"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    },
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": [
        "%DOCFILE%"
      ]
    }
  ],
  "latex-workshop.view.pdf.invert": 1,
  "latex-workshop.view.pdf.viewer": "tab",
  "breadcrumbs.enabled": true,
}
